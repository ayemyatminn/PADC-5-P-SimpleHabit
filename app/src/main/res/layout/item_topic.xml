<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_dark"
    android:layout_marginBottom="@dimen/margin_medium">

    <TextView
        android:id="@+id/tv_all_topices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Topices"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_3x"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_medium"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_all_topices"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tv_all_topices"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardElevation="@dimen/margin_medium">



        <RelativeLayout
            android:id="@+id/rl_all_topices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_dark">


            <ImageView
                android:id="@+id/iv_all_topices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sm8"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_all_topices_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/le"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginRight="@dimen/margin_large"/>

            <TextView
                android:id="@+id/tv_all_topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relax"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_3x"
                android:layout_toRightOf="@id/iv_all_topices_logo"
                android:layout_marginTop="@dimen/margin_large"/>

            <TextView
                android:id="@+id/tv_all_topices_breif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unwind and reieve stress"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_2x"
                android:layout_toRightOf="@id/iv_all_topices_logo"
                android:layout_below="@id/tv_all_topic_title"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>