<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_dark">

    <TextView
        android:id="@+id/tv_simple_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Habits"
        android:layout_marginTop="@dimen/margin_large"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_3x"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_series"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_below="@id/tv_simple_habit"
        app:cardCornerRadius="@dimen/margin_medium"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/sm1"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_starter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simple Habits starter"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_3x"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textAllCaps="false"
                android:background="@color/me_2"
                android:layout_below="@id/tv_starter"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_white_24dp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/margin_small"/>

            <TextView
                android:id="@+id/tv_starter_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 mins"
                android:textColor="@color/white_full"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/margin_small"
                android:textSize="@dimen/text_regular_2x"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>