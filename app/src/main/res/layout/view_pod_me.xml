<?xml version="1.0" encoding="utf-8"?>
<com.padcmyanmar.simplehabit.viewpod.MeViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large">

        <TextView
            android:id="@+id/tv_me_progress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Progress"
            android:textColor="@color/divider"
            android:textSize="@dimen/text_regular_3x"
            android:layout_marginBottom="@dimen/margin_large"/>

        <LinearLayout
            android:layout_below="@id/tv_me_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_large"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_medium">

                <TextView
                    android:id="@+id/tv_current_day_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/me_1"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_heading_1x"
                    android:drawableLeft="@drawable/light"
                    android:drawablePadding="@dimen/margin_small"/>

                <TextView
                    android:id="@+id/tv_current_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Day Streak"
                    android:textAlignment="center"
                    android:layout_below="@id/tv_current_day_num"
                    android:textColor="@color/me_1"
                    android:textSize="@dimen/text_regular_2x"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_medium">

                <TextView
                    android:id="@+id/tv_session_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/me_2"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_heading_1x"/>

                <TextView
                    android:id="@+id/tv_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Session"
                    android:textAlignment="center"
                    android:layout_below="@id/tv_session_num"
                    android:textColor="@color/me_2"
                    android:textSize="@dimen/text_regular_2x"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_medium">

                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/me_3"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_heading_1x"/>

                <TextView
                    android:id="@+id/tv_total_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Minutes"
                    android:textAlignment="center"
                    android:layout_below="@id/tv_total_num"
                    android:textColor="@color/me_3"
                    android:textSize="@dimen/text_regular_2x"/>

            </RelativeLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="@dimen/margin_medium">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff4081">

                <ImageView
                    android:id="@+id/iv_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/crown_me"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:layout_marginLeft="@dimen/margin_large"/>

                <TextView
                    android:id="@+id/tv_unlimited_access"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Unlimited Access"
                    android:textColor="@color/white_full"
                    android:layout_toRightOf="@id/iv_award"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:textSize="@dimen/text_regular_3x"
                    />

                <TextView
                    android:id="@+id/tv_to_the_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To The World's best teachers"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_regular_2x"
                    android:layout_alignLeft="@id/tv_unlimited_access"
                    android:layout_below="@id/tv_unlimited_access"
                    android:layout_marginTop="@dimen/margin_small"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right"
                    android:layout_toRightOf="@id/tv_unlimited_access"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:layout_marginLeft="@dimen/margin_medium_3"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</com.padcmyanmar.simplehabit.viewpod.MeViewPod>